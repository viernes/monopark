<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//table[@id='sales_order_table']/thead/tr/th[@t-if='display_discount']" position="replace"/>
        <xpath expr="//td[@t-if='display_discount']" position="replace"/>

        <xpath expr="//div[@t-field='line.price_unit']" position="replace">
            <div t-field="line.price_unit" t-if="line.discount == 0"/>
        </xpath>
    </template>
</odoo>